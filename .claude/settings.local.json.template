{
  "$schema": "https://json.schemastore.org/claude-code-settings",
  "_comment": "TEMPLATE FILE - Rename to settings.local.json and customize",

  "permissions": {
    "allow": [
      "Read",
      "Bash(git status:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(ls:*)",
      "Bash(find:*)"
    ],
    "deny": [
      "Bash(rm:*)",
      "Bash(mv:*)",
      "Read(//**/.*env*)"
    ]
  },

  "enableAllProjectMcpServers": true,

  "_examples_comment": "Add MCP servers you use regularly:",
  "_example_mcps": {
    "hubspot": "CRM data for prospect research",
    "google-workspace": "Gmail, Calendar, Drive access",
    "hdw-linkedin": "LinkedIn profile research"
  },

  "hooks": {
    "_comment": "Add custom hooks for your workflow"
  }
}
